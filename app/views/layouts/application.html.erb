<!DOCTYPE html>
<html>
<head>
  <title>CodeSnippets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" style="background: orange; font-size: 20px; font-family: cursive">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
  </button>
  <div id="navbar" class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to("home", root_path) %></li>
      <li><%= link_to "Create new snippet", new_snippet_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to "Hello #{current_user.first_name}", edit_user_path(session[:user_id]) %></li>
        <li><%= link_to "Sign out", sessions_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Create New User", new_user_path %></li>
        <li><%= link_to "Sign in", new_session_path %></li>
        <% end %>
    </ul>
</nav>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
