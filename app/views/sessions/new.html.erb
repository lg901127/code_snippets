<div class="col-md-6 col-md-offset-3">
  <h1>Sign in</h1>
<%#= @user.errors.full_messages.join(",") %>
  <%= bootstrap_form_tag url: sessions_path do |f| %>
  <div>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Sign in", class: "btn btn-warning" %>
  <% end %>
</div>
